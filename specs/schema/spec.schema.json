{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["v", "id", "title", "status", "version", "lastUpdated", "goals", "nonGoals", "req", "accept", "assume"],
  "additionalProperties": false,
  "properties": {
    "v": { "type": "integer", "const": 1 },
    "id": { "type": "string" },
    "title": { "type": "string" },
    "status": { "type": "string" },
    "version": { "type": "string" },
    "lastUpdated": { "type": "string" },
    "supersedes": { "type": "array", "items": { "type": "string" } },
    "dependsOn": { "type": "array", "items": { "type": "string" } },
    "goals": { "type": "array", "items": { "type": "string" } },
    "nonGoals": { "type": "array", "items": { "type": "string" } },
    "req": {
      "type": "object",
      "required": ["api", "behavior", "obs"],
      "additionalProperties": false,
      "properties": {
        "api": { "type": "array", "items": { "type": "string" } },
        "behavior": { "type": "array", "items": { "type": "string" } },
        "obs": { "type": "array", "items": { "type": "string" } }
      }
    },
    "cfg": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "env": { "type": "array", "items": { "type": "string" } }
      }
    },
    "accept": { "type": "array", "items": { "type": "string" } },
    "assume": { "type": "array", "items": { "type": "string" } }
  }
}
